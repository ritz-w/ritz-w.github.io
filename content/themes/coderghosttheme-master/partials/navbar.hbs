
{{#if @blog.logo}}
    <div class="logo">
<a class="blog-logo" href="{{@blog.url}}">
        <img class="blog-logo-image" src="{{@blog.logo}}" alt="Blog Logo"/>
</a>
    </div>
{{/if}}

<hr>
  <p class="blog-tagline"> {{@blog.description}} </p>
<ul class="list-unstyled menu">
    <li>
        <a href="https://github.com/ritz-w" target="_blank">
         <i class="el el-github"></i> GitHub
        </a>
    </li>

    {{#if @blog.facebook}}
        <li>
            <a href="{{facebook_url}}" target="_blank">
                <i class="el el-facebook"></i> {{@blog.facebook}}
            </a>
        </li>
    {{/if}}

    {{#if @blog.twitter}}
        <li>
            <a href="{{twitter_url}}" target="_blank">
                <i class="el el-twitter"></i> {{@blog.twitter}}
            </a>
        </li>
    {{/if}}

</ul>
