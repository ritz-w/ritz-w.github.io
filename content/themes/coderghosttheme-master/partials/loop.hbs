{{! This is the post loop - each post will be output using this markup }}
{{#foreach posts}}
<article class="summary col-md-12 {{post_class}}">
    <header>
        <h2 class="title">
        <a href="{{url}}">{{{title}}}
        </a>

               <div class="subhead"> <time datetime="{{date format='YYYY-MM-DD'}}">{{date format="DD MMMM YYYY"}}</time> {{tags prefix="<span class='fa fa-tags'></span>&nbsp;"}}</div>
        </h2>

    </header>

    <section class="description">
        <p>{{excerpt words="100"}}

<a class="read-more" href="{{url}}"><i class="el el-caret-right read-more"></i></a>
        </p>

    </section>
</article>
{{/foreach}}

{{! Previous/next page links - displayed on every page }}
<div class="row text-center">
    <div class="col-xs-12">
        {{pagination}}
    </div>
</div>
